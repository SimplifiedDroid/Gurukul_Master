<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background_gradient"
        android:orientation="vertical"
        tools:context=".ui.activity.sub_activity.HomeworkSubActivity">


        <TextView
            android:id="@+id/homeworksubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="SUBJECT"
            android:textColor="@color/borders_color"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/add_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_add_circle_outline_black_24dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="ADD NEW HOMEWORK"
            android:textColor="@color/borders_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_homework_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</layout>